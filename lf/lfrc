# Basic Settings
set hidden true
set ignorecase true
set icons true
set previewer batwrp

# Custom Functions
cmd mkdir ${{
    printf "Directory Name: "
        read ans
        mkdir $ans
}}

cmd mkfile ${{
    printf "File Name: "
        read ans
        $EDITOR $ans
}}

# Bindings
# Remove some defaults
map m
map o
map n
map "'"
map '"'
map d

map c $vscodium "$f"

map au unarchive
map ae execute

# Basic Functions
map . set hidden!
# map DD delete
# map p paste
# map x cut
# map y copy
map <enter> open
# map R reload
map mf mkfile
map md mkdir
# map C clear

# map dd trash
# map dr restore_trash
